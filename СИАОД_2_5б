#include<iostream>
#include<cmath>

using namespace std;
// Тема 2 Задание 5б

//формула: w = x - (x^2 / (1 + sin^2 * (x+y+z))
// Задание: найти переменную w.

int main()
{
	//////////////////////////////////////////////////////////// Команда для работы русских символов:
	setlocale(LC_ALL, "rus");
	//////////////////////////////////////////////////////////// Внедрение перемнных:
	double w, sin;
	int x, y, z;
	//////////////////////////////////////////////////////////// Красота и ввод значений переменных:
	cout << endl;
	cout << "Введите переменные x, y ,z соответсвенно: ";
	cin >> x >> y >> z;
	cout << "Нужно найти переменную 'w' по формуле: " << endl;
	cout << "                 x^2                   " << endl;
	cout << "w = x - -----------------------        " << endl;
	cout << "         1 + sin^2(x + y + z)          " << endl;
	cout << endl;
	//////////////////////////////////////////////////////////// Нахождение синуса в квадрате:

	sin = (1 - cos(2 * x) / (2));

	//////////////////////////////////////////////////////////// Нахождение w или решение основной задачи:

	w = x - (pow(x, 2) / (1 + pow(sin, 2)));

	//////////////////////////////////////////////////////////// Вывод ответа на экран:

	cout << "Значение переменной w равно: " << w << endl;

	//////  ////   //  //  ///    ///  /////   //   //     ///   //    //  //  //  /////      //
 	//  //  // //  // ///  // /  / //  //     //   //    //  //  //    //  // ///  //        //
	//  //  ///    /// //  //  //  //  ////   //////    //   //  ///////   /// //  ////     //
	//  //  //     //  //  //      //  //        //    ////////  //   //   //  //  //     
    //  //  //     //  //  //      //  ////      //    //    //  //   //   //  //  /////  //

	// Код предназначен для целых задаваемых переменных.
	// Значение находимой переменной w может быть не целым.

}
