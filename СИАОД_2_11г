#include<iostream>
#include<cmath>

using namespace std;
// Тема 2 задачка 11б
int main()
{
	setlocale(LC_ALL, "rus");
	////////////////////////////////////////////////////////// Ввнедрение и ввод координат точки
	double r, x, y;
	cout << "введите координаты точки x, y соответсвенно: ";
	cin >> x >> y;
	cout << endl;
	cout << "Идёт вычисление..." << endl;
	cout << endl;
	////////////////////////////////////////////////////////// Если точка за единицами, то она не входит в область стопроцентно
	if (x > 1 || x < -1 || y > 1 || y < -1)
	{
		cout << "точка выходит за границы единичной области" << endl;
		cout << endl;
		return 0;
	}
	////////////////////////////////////////////////////////// При отрицательном x, область ограничена единицами => любая точка входит в область
	if (x <= 0 )
	{
		cout << "точка поподает в область." << endl;
		cout << endl;
		return 0;
	}
	////////////////////////////////////////////////////////// Проверка отрицательной четверти круга
	if (y < 0)
	{
		r = -1;
		for (double i = 0.1; i <= 0; i + 0.01)
		{

			r += 0.01;
			if (y < r)
			{
				cout << "точка не входит в область" << endl;
				cout << endl;
				break;
			}
		}
		cout << "точка входит в область" << endl;
		cout << endl;
		return 0;
	}
	////////////////////////////////////////////////////////// Проверка положительной четверти круга
	if (y > 0)
	{
		r = 1;
		for (double i = 0.1; i <= 0; i + 0.01)
		{

			r -= 0.01;
			if (y > r)
			{
				cout << "точка не входит в область";
				break;
			}
		}
		cout << "точка входит в область" << endl;
		cout << endl;
		return 0;
	}
	return 0;
}
